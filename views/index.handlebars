{{!-- List of items/recommendations that are collapsible --}}
<div class="accordion" id="accordionExample">
  {{#each items}}
  <div class="card">
    <div class="card-header" id="headingOne">
      <h5 class="mb-0">
        <a class="btn" data-toggle="collapse" data-target="#collapse{{this.id}}" aria-expanded="false" aria-controls="collapseOne">
          {{this.text}}
        </a>
        <a class="small"> -{{this.Author.name}}</a>
      </h5>
    </div>
    {{!-- Collapside section with reviews/notes --}}
    <div id="collapse{{this.id}}" class="collapse hide" aria-labelledby="headingOne">
      <div class="card-body">
        <a>Category: {{this.Category.name}}</a><br>
        <a>{{this.Author.name}}'s initial note: {{this.note}}</a><br>
        <a>Comments:</a>
        <ul>
          {{#each this.Reviews}}
          <li>
            <a>{{comment}}</a><a>. -{{Author.name}}</a>
          </li>
          {{/each}}
        </ul>
        <a data-toggle="collapse" data-target="#butcollapse{{this.id}}" aria-expanded="false" aria-controls="butcollapseOne">
          Add Comment
        </a>
        <div id="butcollapse{{this.id}}" class="collapse hide" aria-labelledby="butheadingOne">
        <form class="form-inline">
          <div class="form-group">
            <input id="comment{{this.id}}" placeholder="I think....."></input>
          </div>
          <button type="submit" data-id="{{this.id}}" class="btn btn-default revsub">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{/each}}
</div>

        <a href="../newitem">Enter new recommendation</a><br>
      </div>
