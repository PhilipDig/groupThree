<body class="index-body">
<div id="header">
  <div class="home-content text-center">
    <h1>Food With Friends <br> The Food We Eat!
    </h1>
  </div>
</div>

<div id="home">
<nav class="navbar navbar-expand-lg navbar-light bg-light nav-width">
  <a class="navbar-brand" href="/">TryThis</a>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true"
          aria-expanded="false">
          Categories
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          {{#each cats}}
          <a class="dropdown-item" href="/home/{{this.id}}">{{this.name}}</a>
          {{/each}}
          <a class="dropdown-item" href="/home/">All</a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="/newitem">New Recomendation</a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="/admin">Admin</a>
          {{!-- Header when a category is selected --}}
        </div>
      </li>
      <h3>{{msg}}</h3>
    </ul>
  </div>
</nav>
{{!-- List of items/recommendations that are collapsible --}}
<div class="accordion" id="accordionExample">
  {{#each items}}
  <div class="card">
    <div class="card-header heading{{this.id}} nav-width">
      <h5 class="mb-0">
        <button class="btn btn-info" type="button" data-toggle="collapse" data-target="#collapse{{this.id}}" aria-expanded="false" aria-controls="collapseOne">
          {{this.text}}
        </button>
        <a class="small"> -{{this.Author.name}}</a>
      </h5>
    </div>
    {{!-- Collapside section with reviews/notes --}}
    <div id="collapse{{this.id}}" class="collapse hide" aria-labelledby="headingOne">
      <div class="card-body">
        <a>Category: {{this.Category.name}}</a><br>
        <a>{{this.Author.name}}'s initial note: {{this.note}}</a><br>
        <a>Comments:</a>
        <ul>
          {{#each this.Reviews}}
          <li>
            <a>{{comment}}</a><a>. -{{Author.name}}</a>
          </li>
          {{/each}}
        </ul>
        <button class="btn btn-secondary btn-sm" type="button" data-toggle="collapse" data-target="#butcollapse{{this.id}}" aria-expanded="false" aria-controls="butcollapseOne">
          Add Comment
        </button>
        <div id="butcollapse{{this.id}}" class="collapse hide" aria-labelledby="butheadingOne">
        <form class="form-inline">
          <div class="form-group">
            <textarea class="form-control" id="review" aria-describedby="review" placeholder="I think....."></textarea>
          </div>
          <button type="submit" id="revsubmit" class="btn btn-default">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{/each}}
</div>

        {{!-- <a href="../newitem">Enter new recommendation</a><br> --}}
      </div>
    </div>
  </div>
</div>
</div>
</body>
<script src="/js/index.js"></script>